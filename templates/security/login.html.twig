{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>.
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ app.user.username }} | <a href="{{ path('logout') }}">Deconnexion</a>
        </div>
    {% endif %}

    <h3 class="">Rentrez vos identifiants pour vous connecter : </h3>
    <label for="inputPseudo">Identifiant</label>
    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" required autofocus>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label for="remember_me">
                <input type="checkbox" id ="remember_me" name="_remember_me" checked>
                Se souvenir de moi
            </label>
        </div>

    {# faire mdp oublié#}
        <div class="mb-3">
           <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié</a>
        </div>


</form>
{% endblock %}
